{
  "manifest_version": 2,
  "name": "Archive Digger",
  "version": "1.0",
  "description": "Checks if the current page has an entry on archive.today and web.archive.org.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "*://archive.today/*",
    "*://web.archive.org/*",
    "*://archive.org/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/history.png",
    "default_popup": "popup.html"
  }
}

